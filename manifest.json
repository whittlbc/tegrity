{
  "manifest_version": 2,
  "name": "Tegrity Voice Control",
  "description": "Control your Tegrity lectures by voice. Play, pause, and navigate.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://louisville.tegrity.com/*"
      ],
      "js": [
        "jquery.js",
        "annyang.min.js",
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
